<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.i14641i.logo.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="412dp"
        android:layout_height="700dp"
        android:layout_x="-7dp"
        android:layout_y="-136dp"
        app:srcCompat="@drawable/layout" />

    <ImageView
        android:id="@+id/confirmar"
        android:layout_width="159dp"
        android:layout_height="106dp"
        android:layout_marginBottom="64dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:layout_x="120dp"
        android:layout_y="430dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/txt_nome"
        app:srcCompat="@android:color/transparent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageView
        android:id="@+id/proximo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginRight="64dp"
        android:layout_x="322dp"
        android:layout_y="460dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/confirmar"
        app:srcCompat="@drawable/next"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/txt_nome"
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="71dp"
        android:layout_marginTop="68dp"
        android:layout_x="41dp"
        android:layout_y="343dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/confirmar"
        app:layout_constraintRight_toLeftOf="@+id/proximo"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="7dp"
        android:layout_x="78dp"
        android:layout_y="294dp"
        android:text="ADIVINHE O MEME"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/img_logo"
        app:layout_constraintTop_toBottomOf="@+id/img_logo"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/lbl_resultado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:layout_x="49dp"
        android:layout_y="35dp"
        android:text="RESPOSTA DO JOGO"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="297dp"
        android:layout_height="207dp"
        android:layout_x="43dp"
        android:layout_y="79dp"
        app:srcCompat="@drawable/noimage" />

</AbsoluteLayout>
